.contact-section
  center-block()
  max-width 838px
  padding-bottom remify(220)
  padding-top remify(77)
  text-align center
  width 90%

.contact-section__title
  color #1e2c3e

  &::after
    background #1e2c3e

.contact-section__top-text
  margin remify(30) auto remify(20) auto
  font-size remify(16.5)
  max-width 555px
  line-height 1.3
  text-align center

.contact-section__top-text-span
  display block
  line-height 1.4

  &:first-of-type
    margin-top 0.4em

  .fa
    display inline-block
    margin-right 0.5em
    color #1e2c3e

.contact-section__form
  margin-top remify(17.5)
  text-align left

  .custom-loader
    margin-top remify(45)

  .site-input
    font-size remify(16)

  .button-wrapper
    margin-top remify(29)
    text-align right

  .site-button
    padding 1.25em 1.82em
    font-size remify(15)

  textarea
    height remify(144)

@media screen and (max-width: 767px)
  .contact-section
    padding-bottom remify(130)

@media screen and (max-width: 450px)
  .contacto-section__form .button-wrapper
    text-align center