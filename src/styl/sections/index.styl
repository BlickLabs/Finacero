.home-hero
  background-image url('../img/backgrounds/home-hero.jpg')
  height calc(95vh - 72px)
  min-height 350px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.home-hero__inner
  color white
  width 90%

  .site-button
    padding 0.8em 1.7em
    font-size remify(15)

.home-hero__title
  font-size remify(39)
  letter-spacing remify(2.4)
  text-transform uppercase
  font-weight $regular
  line-height 1.2

  &::after
    width remify(67)
    height remify(1.5)
    background #9d9d9d
    display block
    content ' '
    margin-top remify(39)

.home-hero__subtitle
  display block
  margin-top remify(19)
  font-size remify(16)
  letter-spacing remify(1)
  margin-bottom remify(36)

.home-why-us
  display flex
  flex-wrap wrap

.home-why-us__cover
  background-image url('../img/backgrounds/home-why.jpg')
  flex-basis 38.4%
  height 28.85vw

.home-why-us__content
  background #f3f3f3
  flex-basis 61.6%

.home-why-us__content-inner
  color #1f2c3f
  max-width 581px
  simple-border('all', 1px, #979797)
  padding remify(33)
  position relative

  &::before
    content ' '
    position absolute
    right 5%
    background #f3f3f3
    height 4px
    width 8%
    min-width 30px
    top -2px

.home-why-us__content-title
  font-weight $regular
  margin 0
  font-size remify(35)
  letter-spacing remify(1)
  text-transform uppercase

.home-why-us__content-text
  font-size remify(16)
  line-height 1.38
  margin 0
  margin-top remify(20)

.home-how-it-works
  padding-top remify(85)
  padding-bottom remify(68)

.home-how-it-works__content
  center-block()
  width 90%
  max-width 914px
  text-align center

  .site-button
    font-size remify(15)
    margin-top remify(50)
    padding 1.1em 1em

.home-how-it-works__items
  display flex
  justify-content space-between

.home-how-it-works__item-square
  background #233045
  width remify(156)
  height remify(156)
  position relative
  text-align center

  &::before
    content ' '
    height remify(19)
    width remify(19)
    simple-border('all', 1px, #aaaaaa)
    position absolute
    right remify(43)
    top remify(-9)

.home-how-it-works__item-icon
  height remify(75)
  margin-top remify(39)

.home-how-it-works__item-description
  display block
  width remify(140)
  center-block()
  text-align center
  font-size remify(16)
  text-transform uppercase
  line-height 1.5
  letter-spacing remify(1)
  margin-top remify(27)

.home-benefits
  background #f3f3f3
  padding-bottom remify(65)

.home-benefits__title
  font-weight normal
  margin 0
  font-size remify(40)
  letter-spacing remify(0.2)
  text-transform uppercase
  text-align center
  padding remify(57) 0 remify(63) 0

.home-benefits__items
  display flex
  justify-content center

.home-benefits__item
  text-align center

  &:not(:last-child)
    .home-benefits__item-content
      simple-border('right', 1px, #979797)

  &:first-child
    .home-benefits__item-icon
      margin-top remify(50)
      height remify(59)
      margin-bottom remify(30)

  &:nth-child(2)
    .home-benefits__item-icon
      margin-top remify(64)
      height remify(63)
      margin-bottom remify(28)

  &:nth-child(3)
    .home-benefits__item-icon
      margin-top remify(47)
      height remify(62)
      margin-bottom remify(29)

  &:nth-child(4)
    .home-benefits__item-text
      max-width remify(250)

    .home-benefits__item-icon
      margin-top remify(38)
      height remify(63)
      margin-bottom remify(28)

  &:nth-child(5)
    .home-benefits__item-icon
      margin-top remify(60)
      height remify(60)
      margin-bottom remify(28)

    .home-benefits__item-text
      max-width remify(245)

.home-benefits__item-title
  background #323d4e
  color white
  font-weight normal
  text-transform uppercase
  font-size remify(20)
  line-height 1.3
  padding remify(17) remify(6)
  margin 0
  margin-bottom remify(31)

.home-benefits__item-content
  font-size remify(14)
  color #192534
  padding 0 remify(23)
  min-height remify(198)

.home-benefits__item-text
  max-width remify(223)
  margin 0