.home-hero
  background-image url('../img/backgrounds/home-hero.jpg')
  height calc(95vh - 72px)
  min-height 350px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.home-hero__inner
  color white
  width 90%

  .site-button
    padding 0.8em 1.7em
    font-size remify(15)

.home-hero__title
  font-size remify(39)
  letter-spacing remify(2.4)
  text-transform uppercase
  font-weight $regular
  line-height 1.2

  &::after
    width remify(67)
    height remify(1.5)
    background #9d9d9d
    display block
    content ' '
    margin-top remify(39)

.home-hero__subtitle
  display block
  margin-top remify(19)
  font-size remify(16)
  letter-spacing remify(1)
  margin-bottom remify(36)