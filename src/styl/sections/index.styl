.home-hero
  background-image url('../img/backgrounds/home-hero.jpg')
  height calc(95vh - 72px)
  min-height 350px

  @media screen and (orientation: portrait)
    @media screen and (min-height: 400px) and (min-width: 400px)
      max-height 76vw

.home-hero__inner
  color white
  width 90%

  .site-button
    padding 0.8em 1.7em
    font-size remify(15)

.home-hero__title
  font-size remify(39)
  letter-spacing remify(2.4)
  text-transform uppercase
  font-weight $regular
  line-height 1.2

  &::after
    width remify(67)
    height remify(1.5)
    background #9d9d9d
    display block
    content ' '
    margin-top remify(39)

.home-hero__subtitle
  display block
  margin-top remify(19)
  font-size remify(16)
  letter-spacing remify(1)
  margin-bottom remify(36)

.home-why-us
  display flex
  flex-wrap wrap

.home-why-us__cover
  background-image url('../img/backgrounds/home-why.jpg')
  flex-basis 38.4%
  height 28.85vw

.home-why-us__content
  background #f3f3f3
  flex-basis 61.6%

.home-why-us__content-inner
  color #1f2c3f
  max-width 581px
  simple-border('all', 1px, #979797)
  padding remify(33)
  position relative

  &::before
    content ' '
    position absolute
    right 5%
    background #f3f3f3
    height 4px
    width 8%
    min-width 30px
    top -2px

.home-why-us__content-title
  font-weight $regular
  margin 0
  font-size remify(35)
  letter-spacing remify(1)
  text-transform uppercase

.home-why-us__content-text
  font-size remify(16)
  line-height 1.38
  margin 0
  margin-top remify(20)