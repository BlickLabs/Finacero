.about-us
  background white
  text-align center

  &::after
    content ' '
    background #f3f3f3
    height remify(92)
    display block

.about-us__title
  display inline-block
  font-size remify(40)
  font-weight normal
  letter-spacing remify(0.2)
  color #1e2b3e
  text-transform uppercase
  margin remify(77) 0

  &::after
    content ' '
    display block
    width remify(66)
    height 1.5px
    background #9d9d9d
    margin-top remify(32)

.about-us__content
  background-image url('../img/backgrounds/about-us.jpg')

.about-us__text
  background rgba(#323d4e, 0.89)
  max-width 609px
  color white
  font-size remify(16)
  line-height 1.38
  text-align left
  padding remify(125) remify(52) remify(73) remify(69)

  p
    margin 0

    &:not(:first-child)
      margin-top 1.4em

@media screen and (max-width: 767px)
  .about-us__text
    padding remify(50) 0
    max-width initial

    p
      width 80%
      center-block()