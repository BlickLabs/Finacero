nav
  background transparent
  display flex
  align-items center
  height 111px
  left 0
  padding 0 remify(60)
  position fixed
  top 0
  width 100%
  z-index 12

  &.fixed,
  &.not-home
    background-image url('../img/backgrounds/navbar.jpg')
    background-size cover
    background-position center

  .menu-trigger,
  .mobile-logo-container
    display none

  .menu-trigger
    color white // Change

  .desktop-logo-container
    padding-top remify(5) // Change

    img
      width remify(223) // Change

  .menu-container
    flex-grow 1
    font-size 14px
    letter-spacing 3px
    text-align right
    text-transform uppercase
    height 100%

  .menu
    height 100%
    display flex
    align-items center
    justify-content flex-end

  .menu-link
    color white
    display inline-block
    vertical-align middle
    simple-border('bottom', 3px, transparent)
    padding-bottom 4px

    &:hover, &.active
      simple-border('bottom', 3px, #9d9d9d)

    &:not(:first-child)
      margin-left 29px

@media screen and (max-width: 876px) // Change
  nav
    justify-content space-between
    height 56px // Change
    padding 0 18px // CHange

    .mobile-logo-container
      display block
      center-block()
      width 70% // Change

      img
        width 100%

    .menu-trigger
      display block
      float right
      margin 18px 0 // Change
      font-size 18px // Change

    .menu-container
      background white // Change
      height 100vh
      margin-right 0
      overflow-y auto
      position fixed
      right -280px
      top 0
      transition right 0.2s
      width 280px
      padding-top 25px // Change

      &.show-menu
        right 0

      .menu
        margin-top 30px // Change
        text-align left
        height auto

      .menu-link
        color white
        display block
        height auto
        line-height 1